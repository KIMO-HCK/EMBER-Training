<div class="row">
  <div class="col-lg-8">
    <h2>All posts here</h2>
    <ul class="list-group">
      {{#each model as |post|}}
      <li class="list-group-item">
        <h4 class="list-group-item-heading">{{post.id}}. {{#link-to "posts.single" post.id}} {{post.title}} {{/link-to}}
        </h4>
        <span class="list-group-item-text">Author: {{#link-to "posts.user" post.userId.id}} {{post.userId.name}} {{/link-to}}
        </span>
      </li>
      {{/each}} {{outlet}}
    </ul>

  </div>
</div>
