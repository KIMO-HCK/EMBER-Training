<div class="row">
  <div class="col-lg-7">
    <div class="card">
      <div class="card-body">
        <div class="card-title">
          <h2>{{model.title}}</h2>
        </div>
        <div class="card-text">
          <p>{{model.body}}</p>
        </div>
        <div>
          <p>Author: {{#link-to "posts.user" model.userId.id}} {{model.userId.name}} {{/link-to}}</p>
        </div>
      </div>
    </div>
  </div>
</div>
